function requete(){
var cip =	document.getElementById("cip").value ;
	$.getJSON( "${find_cip_url }"+cip,
			function(data){
		if (data.id== null) {
			alert("Aucun produit Trouve de CIP "+cip);	
			videLigne();
				}else{
					$("#cip").val(data.cip);
					$("#des").val(data.designation);
					$("#pId").val(data.id);
					$("#qte").focus();
					$("#qtes").val(data.quantiteEnStock);
					$("#pt").val(data.prixTotalStock);

					
				}
			
			});

}

