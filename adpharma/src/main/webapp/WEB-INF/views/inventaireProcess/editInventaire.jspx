					$("#pt").val(data.prixTotalStock);

				}
			
			});

	}

function codeTouche(evenement)
{
        for (prop in evenement)
        {
                if(prop == 'which') return(evenement.which);
        }
        return(evenement.keyCode);
}

function scanTouche(evenement)
{
        var reCarValides = /\d/;
        var reCarSpeciaux = /[\x00\x08\x0D]/;
        var codeDecimal  = codeTouche(evenement);
        var car = String.fromCharCode(codeDecimal);
        var autorisation = reCarValides.test(car) ||  reCarSpeciaux.test(car);

        return autorisation;
}


function verif_formulaire()
{
	
	var qte = document.getElementById("qte").value;
	var pId = document.getElementById("pId").value;
	if(pId == "") {
		   alert("Veuillez saisir le cip!");
		   $("#qte").focus();
		   return false;
		  }
 if(qte == "")  {
   alert("Veuillez entrer la qte Physique !");
	$("#qte").focus();
   return false;
  }
 

}





</script>
<script type="text/javascript">
	function calculEcart()
	  {
	var qtes=	$('#qtes').val() ;
	var qte=	$('#qte').val() ;
	var ecart = qte - qtes ;
	$('#ec').val(ecart);
	if(qte == "") $('#ec').val("");
	  }
		
	function clearProductTable(){
		$('#resultproduit').html(
				'<tr>
				<th>CIP</th>
		    		<th>DESIGNATION</th>
		    		<th>QTE CIP</th>
		    		 <th>RAYON</th>
		    		 <th>FILIALE</th>

				</tr>');
	//	$('#designation').val(" ");
		
	}
	$(function(){
		
		$('form#produitfindform').submit
		(function(){
			clearProductTable();
				$.getJSON( '${find_productajax_url}',
						$('#produitfindform').serialize(),
			                function(data){
								$(data).each(function(){
									
									$('#resultproduit').append(
									     '<tr id="'+this.cip+'">
										  <td>'+this.cip+'</td>
										  <td>'+this.designation+'</td>
										  <td>'+this.quantiteEnStock+'</td>
										  <td>'+this.rayon.codeRayon+'</td>
										  <td>'+this.filiale.libelle+'</td>

										  </tr>'
										
								);
									
								});
								$('table#resultproduit tr').each(function(){
									var current = this;
									this.onclick = function(event) {
										console.log(current.id)
										$('#findproduit').dialog("close");
										requetes(current.id);
									
										
									};
									});
							

							});
				return false ;
		});
		
		$('img.loadimage').ajaxStart(function(){
			$(this).show();
		});
		
		$('img.loadimage').ajaxStop(function(){
			$(this).hide();
		});

	
		
		// Dialog	find produit		
		$('#findproduit').dialog({
			open:function(){
				clearProductTable();
			},
			autoOpen: false,
			width: 800,
			resizable:true,
			draggable :true,
             hide:'fade',
             show:'slide',
             position:'top',
			buttons: {
				"Cancel": function() { 
					$(this).dialog("close"); 
				} 
			}
			
		});

		// Dialog	find produit		
		$('#loadfilediv').dialog({
			autoOpen: false,
			width: "auto",
			resizable:true,
			draggable :true,
             hide:'fade',
             show:'fade',
             position:'center',
			buttons: {
				"Cancel": function() { 
					$(this).dialog("close"); 
				} 
			}
			
		});


		
		
		$('#findcip').click(function(){
			$('#findproduit').dialog('open');
			return false;
		});

		$('#loadfilebtn').click(function(){
			$('#loadfilediv').dialog('open');
			return false;
		});
		

			
		
		
	});
	
		
	
	</script>


